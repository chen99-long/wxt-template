{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["react/jsx-runtime"],
    "paths": {
      "@": ["./"],
      "@/*": ["./*"],
      "~": ["./"],
      "~/*": ["./*"],
      "components/*": ["./components/*"]
    }
  }
}
